extends ../layouts/compare

include ../../blocks/components/breadcrumb/breadcrumb.pug
include ../../blocks/modules/compare/compare.pug
include ../../blocks/modules/compare/compare-headphone.pug
include ../../blocks/modules/compare/compare-laptop.pug
 
 
block variables
  include ../../data/data.pug
  - const title = "Vako"
 

block content
  section.single-page.single-page--compare
      .container
          .single-page
              .single-page__breadcrumbs
                  +breadcrumb([
                      'Главная',
                      'Сравнение товаров',
                  ]) 
              .single-page__h1.favourites-title
                h1 Сравнение товаров
                a(href='#')
                  +icons('#ic_trash', 18)
                  span Очистить список

              .single-page__tabs
                ul(data-tab-nav="compare") 
                  li.active: a(href='#1') Мониторы
                  li: a(href='#2') Наушники
                  li: a(href='#3') Ноутбуки

              .single-page__content(data-container="compare")
                .single-page__item(data-tab="1"): +compare()
                .single-page__item(data-tab="2"): +compare-headphone()
                .single-page__item(data-tab="3"): +compare-laptop()
                 

block scripts
  script(src="/js/vendor.js") 
  script(src="/js/common.js") 