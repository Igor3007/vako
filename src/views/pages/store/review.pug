extends ../../layouts/store-login

include ../../../blocks/modules/store/store-aside/store-aside.pug
include ../../../blocks/modules/store/store-review/store-review.pug
 
block variables
  include ../../../data/data.pug
  - const title = "Vako - Панель управления магазином"

block aside
  +store-aside(2)
  

block content




  .shop-block
    .shop-block__title Отзывы о магазине 
    .shop-block__tabs
      ul(data-tab-nav="review")
        li.active: a(href='#public') Опубликованные
        li: a(href='#moderate') На модерации
    .shop-block__tabs-container
      .shop-block__tabs-item(data-tab="moderate")
        +product-review-on-store--moderate() 
      .shop-block__tabs-item.active(data-tab="public")
        +product-review-on-store--public() 