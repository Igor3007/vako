include ../../helpers/mixins.pug

.login-partners
    .login-partners__wrp
        .login-partners__title Регистрация пользователя
        .login-partners__form
            form(action='#' method='POST' data-store-form="registration") 
                    .form
                        .form__item
                            .form__subitem
                                label E-mail
                                input(type="email" placeholder="Введите e-mail" required)

                        .form__item
                            .form__subitem
                                label Ваш город
                                .input--suggest
                                    input(type="text" placeholder="Например, Санкт-Петербург" required data-url="/json/country.json")
                        
                        .form__item
                            .form__subitem
                                label Ваше имя
                                input(type="text" placeholder="Введите имя" required)

                        .form__item
                            .form__subitem
                                button.btn Отправить