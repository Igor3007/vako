mixin search-index
    section.section-search-index
        .container
            .search-index(data-index-find="container")
                .search-index__find
                    form(action='#' method='POST')
                        .search-index__form(data-index-find="form")
                            .search-index__catalog
                                button.btn.btn-catalog(type="button")
                                    span.icon-catalog
                                        i
                                        i
                                        i
                                        i
                                    | Каталог
                            .search-index__field
                                .search-index__input
                                        input(type="text" spellcheck="false" autocomplete="off" autocorrect="off" autocapitalize="off" placeholder="Искать на Vako" data-index-find="input")
                                .search-index__btn
                                    button.btn Найти
                                .search-index__suggest(data-index-find="suggest")
                                    +find-suggest
                .search-index__banner: +banner-image2()

mixin banner-image2()
    .image-banner 
       .image-banner__image
            a(href='#banner')
                picture 
                        source(srcset="/img/other/Banner.webp" type="image/webp" media="(min-width: 576px)")
                        source(srcset="/img/other/Banner.jpg" type="image/jpeg" media="(min-width: 576px)")
                        source(srcset="/img/other/Banner_760.jpg" type="image/webp" )
                        img(src="/img/other/Banner_760.jpg" alt="Image")

mixin medium-banner
    .medium-banner
        .medium-banner__wrp
            .medium-banner__title Маркетплейс VAKO
            .medium-banner__subtitle Уникальная платформа, на которой ты можешь видеть и выбирать самые выгодные предложения от всех магазинов!
            .medium-banner__image
                +picture('/img/other/img_banner')

mixin find-suggest
    .find-suggest
        .find-suggest__list
            ul
                li: a(href='#') клавиатура
                li: a(href='#') клавиатура с подсветкой
                li: a(href='#') клавиатура беспроводная
                li: a(href='#') клавиатура и мышь

        .find-suggest__category
            +item-sugest(product)
            

        .find-suggest__products
            +item-sugest(product)
            +item-sugest(product)

mixin item-sugest(data)
    .item-sugest
        .item-sugest__image
            picture
                img(src=data.image alt="")
        .item-sugest__main
            .item-sugest__title: a(href='#')= data.title
            .item-sugest__desc= data.desc 


mixin catalog-popup
    .catalog-popup
        .catalog-popup__wrp
            .catalog-popup__content
                .catalog-popup__close(data-catalog-popup="close")
                    span.icon-cross
                .catalog-popup__aside
                    .catalog-popup__title Каталог товаров
                    .catalog-popup__nav
                        nav
                            ul
                                each item in catalog
                                    li(class=(item.sub ? 'isset-sub':''))
                                        span.ic-catalog.lazyload(style="background-image: url("+item.icon+")")
                                        a(href='category.html')= item.title
                                        if(item.sub)
                                            ul.sub-menu
                                                each sub1 in item.sub
                                                    li(class=(sub1.sub ? 'isset-sub':''))
                                                        a(href='category.html')= sub1.title 
                                                        if(item.sub)
                                                            ul.sub-menu
                                                                each sub2 in sub1.sub
                                                                    li(class=(sub2.sub ? 'isset-sub':''))
                                                                        a(href='category.html')= sub2.title 
                                        
                .catalog-popup__main
                    