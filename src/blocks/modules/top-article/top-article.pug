                        ul
                            li: a(href='#') #iphone15
                            li: a(href='#') #watch9
                            li: a(href='#') #galaxys24ultra
                            li: a(href='#') #iphone15
                            li: a(href='#') #watch9
                            li: a(href='#') #galaxys24ultra
                            li: a(href='#') #iphone15
                            li: a(href='#') #watch9
                            li: a(href='#') #galaxys24ultra
