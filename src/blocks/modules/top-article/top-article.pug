mixin card-article(data)
    .card-article
        .card-article__image
            a(href='#'): +pictureLazy(data.image)
        .card-article__title: a(href='#')= data.title
        .card-article__tags 
            ul
                li: a(href='#')= data.tag1
                li: a(href='#')= data.tag2
                li.card-article__date: a(href='#')= data.tag3

