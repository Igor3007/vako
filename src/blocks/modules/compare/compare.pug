mixin table-prop(arr, name)
    tr
        each item,index in arr
            if(index == 0) 
                td
                    span= name
    tr
        each item in arr
            td= item

mixin table-group(count, name)
    
    tr
        each item,index in Array(count)

            if(index == 0) 
                td
                    div.table-group__head
                        span= (!index ? name : '')



