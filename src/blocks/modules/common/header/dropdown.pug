mixin dropdown-icon
    .dropdown-icon
        .dropdown-icon__elem: a(href='#'): +icons('#ic_login', 24)
        .dropdown-icon__list
            .dropdown-button
                a(href='#' data-popup="login"): button.btn.btn-gray Войти
                a(href='#' data-popup="registration"): button.btn.btn-gray Зарегистрироваться
                a(href='/store/'): button.btn.btn-white Вход для магазинов

mixin dropdown-icon-login
    .dropdown-icon
        .dropdown-icon__elem: a(href='#'): +icons('#ic_user-login', 24)
        .dropdown-icon__list
            .dropdown-button
                span: button.btn.btn-white Михаил
                a(href='/personal/'): button.btn.btn-gray Отзывы
                a(href='/personal/config.html'): button.btn.btn-gray Настройки
                a(href='/#logout'): button.btn.btn-white Выход

