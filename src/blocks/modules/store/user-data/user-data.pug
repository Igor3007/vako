mixin store-user-data
    .store-user-data
        .store-user-data__title Личные данные
        .store-user-data__form
            form(action='#' method='POST' data-store-user="form")
                fieldset
                    h3 Личные данные
                    .form
                        .form__item
                            .form__subitem
                                label Имя пользователя
                                input(type="text" placeholder="Имя")
                        .form__item
                            .form__subitem
                                label Телефон пользователя
                                input(type="tel" placeholder="+7(***)***-**-**" )
                        .form__item
                            .form__subitem
                                label Почта (логин)
                                input(type="email" placeholder="user@mail.ru")
                        .form__item
                            .form__subitem
                                label Текущий пароль
                                .form__group.view-password
                                    input(type="password" placeholder="Введите текущий пароль")
                                    span.icon-eye
                        .form__item
                            .form__subitem
                                label Новый пароль
                                .form__group.view-password
                                    input(type="password" placeholder="Введите новый пароль")
                                    span.icon-eye
                        .form__item
                            .form__subitem
                                label Повтор нового пароля
                                .form__group.view-password
                                    input(type="password" placeholder="Введите новый пароль ещё раз")
                                    span.icon-eye
                fieldset
                    h3 Уведомления
                    .form
                        .form__item
                            .form__subitem
                                label Почта для уведомлений
                                input(type="email" placeholder="Email")
                        .form__item
                            .form__subitem
                                label 
                                .form__group
                                    +checkbox('Информационные письма')
                                    +checkbox('Новые отзывы магазина')
                                    +checkbox('Популярные статьи и новости')

                button.btn(type="submit" disabled="") Сохранить изменения