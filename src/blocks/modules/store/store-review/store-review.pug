include ../../single-product/single-product__review.pug

mixin card-review--store
    .card-review
        .card-review__photo
            +picture('/img/common/user')
        .card-review__main
            .card-review__head 
                .card-review__name Андрей Маяковский
                .card-review__date.card-review__date-wrapper
                  ul
                      li 2 месяца назад, Москва
                      li Доставка
                      li Заказ №136559
            .card-review__rating.rating--green
                span 5
                small Отлично
            .card-review__text Мне понравилось. Быстро, удобно, без хлопот и нервотрёпки. Товар пришёл за исправной упаковкой. Курьер вежливый. Если придётся ещё что-то приобрести, то обязательно повторю заказ через ваш сервис. Спасибо.
             
            .card-review__action
                .card-review__add(data-review="add" data-id="123" data-parent="369")
                    +icons('#ic_comment', 20)
                    span Ответить
                .card-review__button
                    .card-review__like(data-like="add" data-id="789")
                        +icons('#ic_heart-default', 20)
                        span.like-count 2
                    
            .card-review__childs

mixin card-review-shop-childs
